<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="16dp"
        tools:context=".groupmanagement.GroupViewActivity">

    <!-- Group Name -->
    <TextView
        android:id="@+id/text_view_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Name:"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_view_group_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_view_group_name"
        android:layout_marginStart="8dp"
        android:text="Sample Group Name" />

    <!-- Group Description -->
    <TextView
        android:id="@+id/text_view_group_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_group_name"
        android:layout_marginTop="16dp"
        android:text="Group Description:"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_view_group_description_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_view_group_description"
        android:layout_below="@id/text_view_group_name_value"
        android:layout_marginStart="8dp"
        android:text="Sample Group Description"/>

    <!-- Group Profile Picture -->
    <ImageView
        android:id="@+id/image_view_group_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/text_view_group_description_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_group_24"/>

    <!-- Group Members -->
    <TextView
        android:id="@+id/text_view_group_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_group_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Group Members:"
        android:textStyle="bold"/>

    <!-- Additional UI Elements -->

    <!-- Group Tags -->
    <ListView
        android:id="@+id/list_view_group_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_group_members"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/text_view_group_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_view_group_members"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Group Tags:"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_view_group_tags_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_view_group_tags"
        android:layout_below="@id/text_view_group_tags"
        android:layout_marginStart="8dp"
        android:text="Sample Group Tags"/>

    <!-- Group Location -->
    <TextView
        android:id="@+id/text_view_group_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_group_tags_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Group Location:"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_view_group_location_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_view_group_location"
        android:layout_below="@id/text_view_group_location"
        android:layout_marginStart="8dp"
        android:text="Sample Group Location"/>

</RelativeLayout>
