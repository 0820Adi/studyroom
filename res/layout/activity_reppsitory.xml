<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".materialmanagement.MaterialActivity">

    <TextView
        android:id="@+id/repoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repository Name"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/repoDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description of the repository."
        android:layout_below="@id/repoTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/repoStarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Star"
        android:layout_below="@id/repoDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/repoForkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fork"
        android:layout_below="@id/repoStarButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/repoOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner: Aditya"
        android:layout_below="@id/repoForkButton"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/repoLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language: Java"
        android:layout_below="@id/repoOwner"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/repoStarsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stars: 1000"
        android:layout_below="@id/repoLanguage"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/repoForksCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forks: 500"
        android:layout_below="@id/repoStarsCount"
        android:layout_marginTop="8dp"/>

    <!-- Add more UI elements and features as needed -->

</RelativeLayout>
